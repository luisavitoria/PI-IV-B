<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <title>Pontos Vacinação</title>
</head>

<body class="bg-light">
    <div class="container text-center mt-5">
        <h1 class="mb-5">Pontos de Vacinação em Alagoas</h1>

        <h4 class="mb-3">Lista de cidades atendidas</h4>

        <div class="input-group mb-3">
            <input class="form-control" type="text" name="" id="searchInput" placeholder="Encontre sua cidade aqui...">
        </div>

        <a href="/vaccination-points" class="link-primary link-underline-opacity-25 link-offset-2 link-underline-opacity-100-hover">voltar
            à página inicial
        </a>

        <table id="table" class="table table-striped table-hover table-bordered mt-5">
            <thead>
                <tr>
                    <th>UF</th>
                    <th>Município</th>
                </tr>
            </thead>

            <tbody>
                <% cities.forEach(function(data) { %>
                    <tr>
                        <td>
                            <%= data.uf %>
                        </td>
                        <td>
                            <%= data.cidade %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        $("document").ready(function () {
            $("#searchInput").on("keyup", function (param) {
                function toNormalForm(str) {
                    return str.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
                }

                let value = toNormalForm($(this).val().toLowerCase());
                $("#table tbody tr").filter(function () {
                    $(this).toggle(toNormalForm($(this).text().toLowerCase()).indexOf(value) > -1)
                })
            })
        })
    </script>
</body>

</html>